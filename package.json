{
  "name": "typescript-backend",
  "version": "1.0.0",
  "description": "Backend for NodeJs App using Typescript",
  "main": "index.js",
  "engines": {
    "node": "16.4.0"
  },
  "scripts": {
    "run-local": "ts-node-dev src/index.ts",
    "not-postinstall": "tsc && mv -i -v public dist/ && rm -v -rf src",
    "migrate-and-seed": "sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "start": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "delete": "rmdir dist /s /q",
    "format": "npx prettier --write ."
  },
  "author": "josephmfaulkner.com",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^26.0.24",
    "apollo-server-express": "^3.0.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "jest": "^27.0.6",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.2.0",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.5.0",
    "@types/node": "^16.3.2",
    "nodemon": "^2.0.12",
    "prettier": "2.3.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
